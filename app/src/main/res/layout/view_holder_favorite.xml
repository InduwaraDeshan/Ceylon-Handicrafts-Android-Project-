<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/custom_input_search"
    android:elevation="3dp">


    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/custom_input_search"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:text="Rs :"
        android:fontFamily="serif"
        android:textColor="@color/purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toStartOf="@+id/textViewWishListPrice"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewWishListImage"
        app:layout_constraintTop_toBottomOf="@+id/textViewWishListProductTitle"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:id="@+id/textViewWishListProductTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="title"
        android:fontFamily="serif"
        android:textColor="@color/purple"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewWishListImage"
        app:layout_constraintTop_toTopOf="@+id/imageViewWishListImage" />

    <ImageView
        android:id="@+id/imageViewWishListImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pottery" />


    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:progress="4"
        android:progressTint="@color/yellow"
        android:rating="4.2"
        android:stepSize="1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toEndOf="@+id/imageViewWishListImage"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textViewWishListPrice"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="0"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView19"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="332dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewWishListImage">

        <TextView
            android:id="@+id/textView1WishListDeleteItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input_search"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:fontFamily="serif"
            android:text="Remove"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold" />


        <CheckBox
            android:id="@+id/checkBoxSelectWishlist"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:checked="false"
            android:text="Select"
            android:fontFamily="serif"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>