<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_background"
    android:layout_margin="8dp"
    android:elevation="3dp">



    <ImageView
        android:id="@+id/imgCategoryAll"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pottery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:background="@drawable/white_background"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="199dp"
        android:layout_height="100dp"
        android:layout_margin="4dp"
        android:background="@drawable/light_purple_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toEndOf="@+id/imgCategoryAll"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/categoryShopBtn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/plus_best_deal_design"
            android:gravity="center"
            android:text="Shop Now >"
            android:fontFamily="serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/categoryViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="title"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/descriptionCategory"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:text="description"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:fontFamily="serif"
            app:layout_constraintBottom_toTopOf="@+id/categoryViewPrice"
            app:layout_constraintEnd_toStartOf="@+id/categoryViewTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryViewTitle" />

        <TextView
            android:id="@+id/categoryViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Rs"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="@color/purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/descriptionCategory" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>